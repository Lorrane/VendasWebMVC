@model VendasWebMvc.Models.Departamento

@{
    ViewData["Titulo"] = "Excluir";
}

<h1>@ViewData["Titulo"]</h1>

<h3>Tem certeza que deseja Deletar este departamento?</h3>
<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(modelo => modelo.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelo => modelo.Nome)
        </dd>
    </dl>
    
    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
